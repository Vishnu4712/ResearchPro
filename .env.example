# ResearchPro Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: API Keys
# ============================================================================

# Gemini API Key (get from https://aistudio.google.com/apikey)
GOOGLE_API_KEY=your_gemini_api_key_here

# ============================================================================
# OPTIONAL: Google Cloud Configuration
# ============================================================================

# Google Cloud Project ID (for Vertex AI deployment)
GCP_PROJECT_ID=your-project-id

# Vertex AI Location/Region
VERTEX_LOCATION=us-central1

# Vertex AI Memory Bank ID (if using persistent memory)
MEMORY_BANK_ID=your-memory-bank-id

# ============================================================================
# OPTIONAL: Application Configuration
# ============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=

# Enable distributed tracing
ENABLE_TRACING=true

# Use Vertex AI Memory Bank (true) or in-memory (false)
USE_VERTEX_MEMORY=false

# Maximum sources per research query
MAX_SOURCES=10

# Quality score threshold for iterative improvement
QUALITY_THRESHOLD=0.8

# ============================================================================
# OPTIONAL: Performance Configuration
# ============================================================================

# Request timeout in seconds
REQUEST_TIMEOUT=60

# Maximum concurrent searches
MAX_CONCURRENT_SEARCHES=3

# Cache TTL in seconds
CACHE_TTL=3600

# ============================================================================
# OPTIONAL: Evaluation Configuration
# ============================================================================

# Enable automatic evaluation
ENABLE_EVALUATION=true

# Minimum passing score for tests
MIN_PASSING_SCORE=0.7

# ============================================================================
# ðŸš¨ IMPORTANT SECURITY NOTES
# ============================================================================
# - Never commit .env file to version control
# - Add .env to your .gitignore
# - Rotate API keys regularly
# - Use different keys for dev/staging/production
# - Follow the principle of least privilege for GCP service accounts
